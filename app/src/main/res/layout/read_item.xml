<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/white">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="124.7dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/img"
            android:layout_width="103.1dp"
            android:layout_height="103.1dp"
            android:layout_margin="10.7dp"
            android:src="@drawable/picture"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical">
            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="公司消息"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/textColor_2"
                android:layout_marginTop="17.7dp"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16.3dp"
                android:text="请各部门加油，请各部门加油，请各部门加油，请各部门加油，请各部门加油，请各部门加油，"
                android:maxLines="2"
                android:ellipsize="end"
                android:paddingRight="10dp"
                android:textColor="@color/remember_pwd"
                android:textSize="14sp" />

            <TextView
                android:layout_marginTop="6.7dp"
                android:id="@+id/time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2017"
                android:textColor="@color/remember_pwd"
                android:textSize="12sp" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>