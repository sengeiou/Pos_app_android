<?xml version="1.0" encoding="utf-8"?>
<com.jude.fitsystemwindowlayout.FitSystemWindowsLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/login_bac"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <RelativeLayout style="@style/topbar_bg">

        <ImageButton
            android:id="@+id/back"
            style="@style/topbar_return_img"
            android:background="@color/text_while"
            />

        <TextView
            style="@style/topbar_title"
            android:layout_centerHorizontal="true"
            android:text="找回密码" />

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/enter_line">

    </View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/login_bac"
        android:layout_marginTop="15dp"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">
            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/mobile"
                android:layout_width="303.3dp"
                android:layout_height="53.3dp"
                android:textCursorDrawable="@null"
                app:met_textColorHint="@color/hint_color"
                app:met_primaryColor="@color/textColor_1"
                android:textSize="14sp"
                android:paddingLeft="10dp"
                android:layout_gravity="center"
                android:hint="请输入用户名"/>
            <Button
                android:id="@+id/sendcode"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_alignRight="@+id/mobile"
                android:background="@color/text_while"
                android:text="获取验证码"
                android:textSize="14dp"
                android:textColor="@color/textColor_2"
                style="?android:attr/borderlessButtonStyle"/>

        </RelativeLayout>


        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/code"
            android:layout_width="303.3dp"
            android:layout_height="53.3dp"
            android:textCursorDrawable="@null"
            app:met_textColorHint="@color/hint_color"
            app:met_primaryColor="@color/textColor_1"
            android:paddingLeft="10dp"
            android:textSize="14sp"
            android:layout_gravity="center"
            android:hint="请输入验证码"/>
        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/newpassword"
            android:layout_width="303.3dp"
            android:layout_height="53.3dp"
            android:textCursorDrawable="@null"
            app:met_textColorHint="@color/hint_color"
            app:met_primaryColor="@color/textColor_1"
            android:textSize="14sp"
            android:paddingLeft="10dp"
            android:layout_gravity="center"
            android:hint="请输入新密码"/>
        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/password"
            android:layout_width="303.3dp"
            android:layout_height="53.3dp"
            android:textCursorDrawable="@null"
            app:met_textColorHint="@color/hint_color"
            app:met_primaryColor="@color/textColor_1"
            android:paddingLeft="10dp"
            android:textSize="14sp"
            android:layout_gravity="center"
            android:hint="请确认密码"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="43.3dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_login"
                    android:layout_width="303.3dp"
                    android:layout_height="42.7dp"
                    android:layout_marginLeft="10dip"
                    android:layout_marginRight="10dip"
                    android:background="@drawable/button_login"
                    android:text="确认"
                    android:textStyle="bold"
                    android:textSize="16.7dp"
                    android:textColor="@color/text_while" />
            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>



</com.jude.fitsystemwindowlayout.FitSystemWindowsLinearLayout>