<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/text_while"
    tools:context="com.example.kkkk.helloworld.activity.sendnoticeActivity">
    <RelativeLayout style="@style/topbar_bg">
        <ImageButton
            android:id="@+id/back"
            style="@style/topbar_return_img"
            android:background="@color/text_while"
            />
        <TextView
            style="@style/topbar_title"
            android:layout_centerHorizontal="true"
            android:text="发布公告" />
        <TextView
            android:id="@+id/sendnotice"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:textSize="16sp"
            android:textColor="@color/textColor_1"
            android:paddingRight="10.7dp"
            android:text="确认发布"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:textCursorDrawable="@null"
            app:met_textColorHint="@color/hint_color"
            app:met_primaryColor="@color/textColor_1"
            android:textSize="16sp"
            android:paddingLeft="10dp"
            android:layout_gravity="center"
            android:hint="请输入公告主题"/>
        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="188.4dp"
            android:layout_marginTop="10.7dp"
            android:textCursorDrawable="@null"
            app:met_textColorHint="@color/hint_color"
            app:met_primaryColor="@color/textColor_1"
            android:textSize="14sp"
            android:paddingLeft="10dp"
            android:gravity="start"
            android:hint="请输入公告内容"/>
        <LinearLayout
            android:layout_width="359.9dp"
            android:layout_height="103.3dp"
            android:layout_gravity="center">
            <ImageView
                android:id="@+id/img1"
                android:layout_width="103.3dp"
                android:layout_height="103.3dp"
                android:layout_marginLeft="10.7dp"
                android:layout_marginRight="14.3dp"/>

            <ImageView
                android:id="@+id/img2"
                android:layout_width="103.3dp"
                android:layout_height="103.3dp"
                android:layout_marginRight="14.3dp" />

            <ImageView
                android:id="@+id/img3"
                android:layout_width="103.3dp"
                android:layout_height="103.3dp" />
        </LinearLayout>
        <ImageView
            android:id="@+id/set"
            android:layout_width="103.3dp"
            android:layout_height="103.3dp"
            android:layout_marginLeft="10.3dp"
            android:src="@drawable/add_picture"/>
    </LinearLayout>
</LinearLayout>
