<?xml version="1.0" encoding="utf-8"?>
<com.jude.fitsystemwindowlayout.FitSystemWindowsLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/login_bac"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <RelativeLayout style="@style/topbar_bg">

        <ImageButton
            android:id="@+id/back"
            style="@style/topbar_return_img"
            android:background="@color/text_while"
            android:visibility="gone"/>

        <TextView
            style="@style/topbar_title"
            android:layout_centerHorizontal="true"
            android:text="登录" />

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/enter_line">

    </View>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="82.7dp"
            android:layout_marginLeft="40dp"
            android:text="欢迎登录"
            android:textColor="@color/textColor_2"
            android:textSize="20sp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="28.07dp"
            android:layout_marginTop="72dp"
            android:src="@drawable/head"/>
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/login_bac"
        android:layout_marginTop="47.3dp"
        android:orientation="vertical">

        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="303.3dp"
            android:layout_height="53.3dp"
            android:textCursorDrawable="@null"
            app:met_textColorHint="@color/hint_color"
            app:met_primaryColor="@color/textColor_1"
            android:textSize="14sp"
            android:paddingLeft="10dp"
            android:layout_gravity="center"
            android:hint="请输入用户名"/>
        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="303.3dp"
            android:layout_height="53.3dp"
            android:textCursorDrawable="@null"
            app:met_textColorHint="@color/hint_color"
            app:met_primaryColor="@color/textColor_1"
            android:paddingLeft="10dp"
            android:textSize="14sp"
            android:layout_gravity="center"
            android:hint="请输入密码"/>
        <CheckBox
            android:id="@+id/login_ck"
            style="@style/CustomCheckboxTheme"
            android:layout_width="303.3dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="9.7dp"
            android:text="记住密码"
            android:paddingLeft="13.3dp"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/remember_pwd"
            android:textSize="12sp"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="43.3dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_login"
                    android:layout_width="303.3dp"
                    android:layout_height="42.7dp"
                    android:layout_marginLeft="10dip"
                    android:layout_marginRight="10dip"
                    android:background="@drawable/button_login"
                    android:text="登录"
                    android:textStyle="bold"
                    android:textSize="16.7dp"
                    android:textColor="@color/text_while" />
            </LinearLayout>
        </RelativeLayout>

        <TextView
            android:id="@+id/forget_password"
            android:layout_width="303.3dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="忘记密码？"
            android:layout_marginTop="12sp"
            android:textSize="12sp"
            android:textColor="@color/remember_pwd" />
    </LinearLayout>



</com.jude.fitsystemwindowlayout.FitSystemWindowsLinearLayout>