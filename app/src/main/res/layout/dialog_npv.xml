<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/text_while"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/btn"
        android:layout_width="match_parent"
        android:layout_height="41.7dp"
        android:orientation="horizontal"
        android:background="@color/text_while">
        <TextView
            android:id="@+id/no"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textColor="@color/textColor_2"
            android:text="取消"
            android:layout_weight="1"
            android:textSize="14sp"
            android:paddingLeft="20.7dp"
            android:gravity="center_vertical"
            />
        <TextView
            android:id="@+id/yes"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textColor="@color/textColor_1"
            android:text="确定"
            android:layout_weight="1"
            android:textSize="14sp"
            android:paddingRight="20.7dp"
            android:gravity="right|center_vertical"
            />
    </LinearLayout>
    <cn.carbswang.android.numberpickerview.library.NumberPickerView
        android:id="@+id/picker"
        android:layout_width="match_parent"
        android:layout_height="218dp"
        android:layout_centerHorizontal="true"
        android:background="#11999999"
        android:contentDescription="test_number_picker_view"
        app:npv_ItemPaddingVertical="5dp"
        app:npv_ShowCount="5"
        app:npv_DividerColor="@color/hint_color"
        app:npv_TextColorNormal="@color/hint_color"
        app:npv_TextColorSelected="#000000"
        app:npv_TextSizeNormal="14sp"
        app:npv_TextSizeSelected="16sp"
        app:npv_WrapSelectorWheel="true"
        android:layout_below="@id/btn"/>
</RelativeLayout>